<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:padding="4dip"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.voot_austin.voot.RepresentativesActivity">


    <TextView
        android:layout_width="345dp"
        android:layout_height="96dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:paddingTop="20dp"
        android:text="Find Your Representatives" />

    <EditText
        android:id="@+id/address"
        android:paddingTop="40dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Address" />

    <EditText
        android:id="@+id/city"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="City , State" />


    <EditText
        android:id="@+id/zipcode"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Zip Code" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingTop="40dp"
        android:textAlignment="center"
        android:id="@+id/rep_btn"
        android:onClick="sendRequestForRepresentatives"
        android:text="Find Representatives" />

    <TextView
        android:layout_width="345dp"
        android:layout_height="96dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:paddingTop="50dp"
        android:text="You can enter a new address, or just press the button to use your saved address." />
</LinearLayout>
